{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "ORCA Application API",
    "description": "Application API for creating Blockchain",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Block",
      "description": "API for blocks in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/block":{
      "post":{
        "tags": [
          "Blocks"
        ],
        "description": "create a block",
        "parameters": [
          {
            "name": "blockchain",
            "in": "body",
            "description": "blockchain that we create",
            "schema": {
              "$ref": "#/definitions/Block"
            }
          }
        ],
        "produces":[
          "application/json"
        ],
        "responses":{
          "200":{
            "description":"block is created",
            "schema":{
              "$ref":"#/definitions/Block"
            }
          }
        }
      },
      "/block":{
        "get":{
          "tags": [
            "Blocks"
          ],
          "description": "get blocks",
          "summary": "Get all blocks in system",
          "responses":{
            "200":{
              "description":"block is created",
              "schema":{
                "$ref":"#/definitions/Block"
              }
            }
          }
        }
    }
  },
  "definitions": {
      "Block": {
        "required": [
          "register_date"       
        ],
        "properties": {
          "register_date": {
            "type": "date",
            "uniqueItems": true
          }      
        }
      },
      "Blocks": {
        "type": "array",
        "$ref": "#/definitions/Block"
      }
   }
 }
}